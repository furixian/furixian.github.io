<!DOCTYPE html>
<html>
<head>
    <title>Sunum Yükle</title>
</head>
<body>
    <form action="upload.php" method="post" enctype="multipart/form-data">
        <input type="file" name="file" accept=".pdf,.ppt,.pptx">
        <input type="submit" value="Yükle">
    </form>
</body>
</html>
<?php
if (isset($_FILES['file'])) {
    $uploadDir = 'sunumlar/';
    $uploadFile = $uploadDir . basename($_FILES['file']['name']);

    if (move_uploaded_file($_FILES['file']['tmp_name'], $uploadFile)) {
        $downloadLink = "https://furixian.github.io/yollanandosyalar"; 

        echo "Sunum başarıyla yüklendi. İndirme linki: <a href='$downloadLink' download>İndir</a>";
    } else {
        echo "Sunum yüklenirken bir hata oluştu.";
    }
}
?>
